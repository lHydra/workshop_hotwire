<%# locals: () -%>
<div class="fixed z-50 right-0 mr-4 top-0 mt-[80px]" id="flash">
  <div class="flex justify-center">
    <% if flash[:notice] %>
      <div class="flash notice" role="alert" data-turbo-temporary data-controller="removeable" data-removeable-after-value="53">
        <p class="text-small"><%= flash[:notice] %></p>
        <button class="flash--close" data-action="click->removeable#remove">
          <%= render partial: "icons/close" %>
        </button>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="flash alert" role="alert" data-turbo-temporary data-controller="removeable" data-removeable-after-value="53">
        <p class="text-small"><%= flash[:alert] %></p>
        <button class="flash--close" data-action="click->removeable#remove">
          <%= render partial: "icons/close" %>
        </button>
      </div>
    <% end %>
  </div>
</div>
